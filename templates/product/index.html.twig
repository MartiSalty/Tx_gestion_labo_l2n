{% extends "base.html.twig" %}

{% block title 'Product list' %}

{% block body %}
<div class="jumbotron text-center">
    <h1>Labo L2N</h1>
    <p>C'est la fete au produit</p>
</div>

<div class="container">

    
    <h2>Liste des produits</h2>
        {% for product in products %}
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('product.show', {slug: product.slug, id: product.id}) }}">
                            {{ product.frenchName }}
                        </a>
                    </h5>
                    <p class="card-text">Stockage : {{ product.storage.name }}</p>
                    <p class="card-text">Poubelle : {{ product.trashCan.name }}</p>
                </div>
            </div>
        {% endfor %}

</div>
{% endblock %}