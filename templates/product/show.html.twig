{% extends "base.html.twig" %}

{% block title product.frenchName %}


{% block body %}

	{%if product.securityFormNameFile%}
      	<a href="{{ path('product.show.securityForm', {slug: product.slug, id: product.id}) }}" class="mt-2 d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Afficher la fiche de sécurité complette</a>
		<a href="{{ vich_uploader_asset(product, 'securityFormFile') }}" class="mt-2 d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" download="{{product.frenchName}}_fiche_securite"><i class="fas fa-download fa-sm text-white-50"></i> Télécharger la fiche de sécurité complette</a>
		

	{%endif%}
	<a href="" class="mt-2 d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" onclick="printDiv('summarySheet')"><i class="fas fa-download fa-sm text-white-50"></i> Imprimer la fiche de sécurité résumé</a>
	<a href="" class="mt-2 d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" onclick="printDiv('qrCode')"><i class="fas fa-download fa-sm text-white-50"></i> Imprimer le qr du produit</a>

	{% include "/product/summarySheet.html.twig" %}
	
{% endblock %}

{% block javascripts %}
<script>
function printDiv(divName) {
	var printContents = document.getElementById(divName).innerHTML;    
   	var originalContents = document.body.innerHTML;      
   	document.body.innerHTML = printContents;     
   	window.print();     
   	document.body.innerHTML = originalContents;
}
</script>
{% endblock %}


