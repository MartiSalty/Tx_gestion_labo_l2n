<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# bootstrap #}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

        {% block stylesheets %}{% endblock %}
    </head>

    <body>

    {# Navbar #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('home') }}">Labo l2n</a>

        {# Items #}
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                {# Products List #}
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('product.index') }}">Listes <span class="sr-only">(current)</span></a>
                </li>

                {# TODO other menu items (Admin, roles) #}

            </ul>

            {# connect/disconnect #}
            <ul class="navbar-nav">
                <li class="nav-item">
                    {% if app.user %}
                        <a href="{{ path('logout') }}" class="nav-link">Se deconnecter</a>
                    {% else %}
                        <a href="{{ path('login') }}" class="nav-link">Se connecter</a>
                    {% endif %}
                </li>
            </ul>

        </div>

    </nav>

    {# Navbar 2 #}
    <div class="card text-center">
        <div class="card-header">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link {% if current_admin_menu is defined and current_admin_menu == 'product' %}active{% endif %}" href="{{ path('admin.product.index') }}">Produits</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_admin_menu is defined and current_admin_menu == 'pictogram' %}active{% endif %}" href="{{ path('admin.pictogram.index') }}">Pictogrammes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_admin_menu is defined and current_admin_menu == 'storage' %}active{% endif %}" href="{{ path('admin.storage.index') }}">Stockages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_admin_menu is defined and current_admin_menu == 'trashCan' %}active{% endif %}" href="{{ path('admin.trashCan.index') }}">Poubelles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_admin_menu is defined and current_admin_menu == 'hazardStatement' %}active{% endif %}" href="{{ path('admin.hazardStatement.index') }}">GHS Mentions de danger</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_admin_menu is defined and current_admin_menu == 'user' %}active{% endif %}" href="{{ path('admin.user.index') }}">Utilisateurs</a>
                </li>
            </ul>
        </div>
    </div>


    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}

    {# bootstrap #}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    </body>
</html>
