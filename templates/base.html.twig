<!DOCTYPE html>
<html>

<head>

    <meta charset="UTF-8">

    <title>{% block title %}TO MODIFY{% endblock %}</title>

    {# SB admin 2 theme, basis of our app front, so not in stylesheets block to be sure it is present everywhere #}
    <link rel="stylesheet" href="/css/sb-admin-2.min.css">

    {% block stylesheets %}{% endblock %}

    {# fonts #}
    <link href="/icons/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="{{ path('home') }}">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-flask"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Laboratoire L2N</div>
            </a>

            {# USER #}
            {% if is_granted('ROLE_USER') %}

                <!-- Divider -->
                <hr class="sidebar-divider my-0">

                <!-- Nav Item - Products list -->
                <li class="nav-item {% if app.request.get('_route') == 'home' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('home') }}">
                        <i class="fas fa-vial"></i>
                        <span>Liste produits</span>
                    </a>
                </li>

            {% endif %}

            {# ACCOUNT MANAGER #}
            {% if is_granted('ROLE_ACCOUNT_MANAGER') %}

                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Gestion comptes utilisateurs
                </div>

                {# todo path gestion utilisateurs en /usermanager #}
                <!-- Nav Item - user list -->
                <li class="nav-item {% if app.request.get('_route') == '' %} active {% endif %}">
                    <a class="nav-link" href="{#{{ path('') }}#}">
                        <i class="fas fa-users"></i>
                        <span>Liste utilisateurs</span>
                    </a>
                </li>

            {% endif %}

            {# PRODUCT MANAGER #}
            {% if is_granted('ROLE_PRODUCT_MANAGER')%}

                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Modération produits
                </div>

                <!-- Nav Item - products list -->
                <li class="nav-item {% if app.request.get('_route') == 'productmanager.product.index' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('productmanager.product.index') }}">
                        <i class="fas fa-vial"></i>
                        <span>Produits</span>
                    </a>
                </li>

                <!-- Nav Item - pictograms list -->
                <li class="nav-item {% if app.request.get('_route') == 'productmanager.pictogram.index' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('productmanager.pictogram.index') }}">
                        <i class="fas fa-images"></i>
                        <span>Pictogrammes</span>
                    </a>
                </li>

                <!-- Nav Item - stock list -->
                <li class="nav-item {% if app.request.get('_route') == 'productmanager.storage.index' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('productmanager.storage.index') }}">
                        <i class="fas fa-cubes"></i>
                        <span>Stockages</span>
                    </a>
                </li>

                <!-- Nav Item - trash list -->
                <li class="nav-item {% if app.request.get('_route') == 'productmanager.trashCan.index' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('productmanager.trashCan.index') }}">
                        <i class="far fa-trash-alt"></i>
                        <span>Poubelles</span>
                    </a>
                </li>

                {# todo refaire path gestion GHS en /productmanager #}
                <!-- Nav Item - GHS Danger -->
                <li class="nav-item {% if app.request.get('_route') == 'productmanager.hazardStatement.index' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('productmanager.hazardStatement.index') }}">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>GHS Mention de danger</span>
                    </a>
                </li>

            {% endif %}

            {# ADMIN #}
            {% if is_granted('ROLE_ADMIN') %}

                <!-- Divider -->
                <hr class="sidebar-divider">

                <!-- Heading -->
                <div class="sidebar-heading">
                    Administration
                </div>

                <!-- Nav Item - products list -->
                <li class="nav-item {% if app.request.get('_route') == 'admin.user.index' %} active {% endif %}">
                    <a class="nav-link" href="{{ path('admin.user.index') }}">
                        <i class="fas fa-users-cog"></i>
                        <span>Administration utilisateurs</span>
                    </a>
                </li>

            {% endif %}

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        {# connected #}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                            {# TODO : path vers lien détail compte avec modif de mdp #}
                            <!-- Nav Item - User Information -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-lg-inline text-gray-600 small">{{ app.user.name }} {{ app.user.familyname }}</span>
                                    <i class="fas fa-user"></i>
                                </a>
                            </li>

                            <div class="topbar-divider d-none d-sm-block"></div>

                            <!-- Nav Item - logout -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="{{ path('logout') }}" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">Se déconnecter</span>
                                    <i class="fas fa-sign-out-alt"></i>
                                </a>
                            </li>

                        {# not connected #}
                        {% else %}

                            <!-- Nav Item - logout -->
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="{{ path('login') }}" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">Se connecter</span>
                                    <i class="fas fa-sign-in-alt"></i>
                                </a>
                            </li>

                        {% endif %}

                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    {% block body %}{% endblock %}

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Laboratoire L2N 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    {% block javascripts %}{% endblock %}

    {# theme sb-admin-2 #}
    <script src="/js/sb-admin-2.min.js"></script>

</body>

</html>
